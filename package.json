    "node": ">=16.0.0",
    "npm": ">=8.11.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "puppeteer": "^21.0.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6"
  }
